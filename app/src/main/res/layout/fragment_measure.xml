<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_north"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#c224"
        android:text="north tv"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_east"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#d13456"
        android:text="east tv"
        android:textAlignment="center"
        android:ems="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_south"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ef3465"
        android:text="south tv"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_west"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#fd2"
        android:text="west tv"
        android:textAlignment="center"
        android:ems="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_north"
        app:layout_constraintRight_toLeftOf="@+id/tv_east"
        app:layout_constraintBottom_toTopOf="@+id/tv_south"
        app:layout_constraintLeft_toRightOf="@+id/tv_west"
        android:orientation="vertical"
        android:background="#af1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本机机型"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本机尺寸423g"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本机重量423g"/>
        <Button
            android:id="@+id/btn_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全屏测量"/>
        <Button
            android:id="@+id/btn_redraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调整重绘"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
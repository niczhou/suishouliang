<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:nex="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.nic.suishouliang.MainActivity"
    >
    <cn.nic.suishouliang.ScaleView_North
        android:id="@+id/sv_north"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <cn.nic.suishouliang.ScaleView_East
        android:id="@+id/sv_east"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/sv_north"
        app:layout_constraintRight_toLeftOf="@+id/sv_east"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center_vertical"
        android:background="#fe87">

        <fragment
            android:id="@+id/fragment_toolbar"
            android:name="cn.nic.suishouliang.Fragment_Toolbar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="随手量"
            android:background="#faae"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Log"
            android:textSize="16sp"
            android:background="#faa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_toolbar"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#4ea699"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_log"
            app:layout_constraintBottom_toTopOf="@+id/layout_buttons"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">
            <!--<Button-->
                <!--android:id="@+id/btn_set"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="本机信息"-->
                <!--android:layout_weight="1"-->
                <!--/>-->
            <Button
                android:id="@+id/btn_measure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="开始测量"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_convert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="单位换算"
                android:layout_weight="1"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
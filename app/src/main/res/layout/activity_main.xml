<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:nex="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.nic.suishouliang.MainActivity"
    >
    <TextView
        android:id="@+id/sv_north"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fa1"
        android:text="north scale"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/sv_east"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#adf1"
        android:text="east scale"
        android:textAlignment="center"
        android:ems="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/sv_south"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fa1"
        android:text="south scale"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/sv_west"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#aa49d9b7"
        android:text="west scale"
        android:textAlignment="center"
        android:ems="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/sv_north"
        app:layout_constraintRight_toLeftOf="@+id/sv_east"
        app:layout_constraintBottom_toTopOf="@+id/sv_south"
        app:layout_constraintLeft_toRightOf="@+id/sv_west"
        android:layout_gravity="center_vertical"
        android:background="#fe87">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="随手量"
            android:background="#faae"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#4ea699"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toTopOf="@+id/layout_buttons"
            />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="本机信息"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_fullscreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="全屏测量"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="单位换算"
                android:layout_weight="1"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>